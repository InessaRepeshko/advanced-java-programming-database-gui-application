<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="applications.database_gui_application.MetroStationsAppController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#fileNew" text="New" />
                  <MenuItem mnemonicParsing="false" onAction="#fileOpen" text="Open..." />
                  <MenuItem mnemonicParsing="false" onAction="#fileSave" text="Save..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem mnemonicParsing="false" onAction="#fileExit" text="Exit" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Run">
              <items>
                  <Menu mnemonicParsing="false" text="Sort &quot;MetroStations&quot; Table">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#runSortMetroStationsByAscName" text="Sort by ascending name" />
                        <MenuItem mnemonicParsing="false" onAction="#runSortMetroStationsByDescName" text="Sort by descending name" />
                        <MenuItem mnemonicParsing="false" onAction="#runSortMetroStationsByAscOpened" text="Sort by ascending opened year" />
                        <MenuItem mnemonicParsing="false" onAction="#runSortMetroStationsByDescOpened" text="Sort by descending opened year" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Sort &quot;Hours&quot; Table">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#runSortHoursByAscRidership" text="Sort by ascending ridership" />
                        <MenuItem mnemonicParsing="false" onAction="#runSortHoursByDescRidership" text="Sort by descending ridership" />
                        <MenuItem mnemonicParsing="false" onAction="#runSortHoursByAscCommentLength" text="Sort by ascending comment length" />
                      <MenuItem mnemonicParsing="false" onAction="#runSortHoursByDescCommentLength" text="Sort by descending comment length" />
                     </items>
                  </Menu>
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#helpAbout" text="About..." />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <AnchorPane prefHeight="472.0" prefWidth="350.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="25.0" text="Text for search:" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <TextField fx:id="textFieldSearchText" prefHeight="25.0" promptText="Word or word fragment" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="30.0" />
            <Button mnemonicParsing="false" onAction="#searchHoursByCommentWord" prefHeight="25.0" text="Search Hours by comment word" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="65.0" />
            <Label layoutX="10.0" layoutY="10.0" prefHeight="25.0" text="Data for search:" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="120.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="textFieldSearchMSName" layoutX="10.0" layoutY="10.0" prefHeight="25.0" promptText="Metro Station name" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="150.0" />
            <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#searchMetroStation" prefHeight="25.0" text="Search Metro Station" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="185.0" />
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#searchTotalRidership" prefHeight="25.0" text="Get total ridership" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="220.0" />
            <Button mnemonicParsing="false" onAction="#searchHoursWithMinRidership" prefHeight="25.0" text="Search Hours with min ridership" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="255.0" />
            <Button mnemonicParsing="false" onAction="#searchHoursWithMaxCommentWordCount" prefHeight="25.0" text="Search Hours with max word count of comment" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="290.0" />
            <TextArea fx:id="textAreaSearchResults" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="325.0" />
         </children>
      </AnchorPane>
   </left>
   <center>
      <AnchorPane prefHeight="535.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Table &quot;MetroStations&quot;" AnchorPane.topAnchor="5.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TableView fx:id="tableViewMetroStations" editable="true" layoutX="10.0" layoutY="10.0" prefHeight="535.0" prefWidth="300.0" AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="500.0" AnchorPane.topAnchor="25.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="tableColumnMSMetroStationID" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="MetroStationID" />
                  <TableColumn fx:id="tableColumnMSName" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Name" />
                  <TableColumn fx:id="tableColumnMSOpened" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Opened Year" />
               </columns>
            </TableView>
            <Button fx:id="buttonMetroStationsEditMode" mnemonicParsing="false" onAction="#showEditModeForMetroStations" prefHeight="25.0" prefWidth="100.0" text="Edit mode" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="500.0" />
            <Label text="Table &quot;Hours&quot;" AnchorPane.leftAnchor="365.0" AnchorPane.topAnchor="5.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TableView fx:id="tableViewHours" editable="true" prefHeight="535.0" prefWidth="400.0" AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="365.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="25.0">
              <columns>
                  <TableColumn fx:id="tableColumnHourHourID" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="HourID" />
                <TableColumn fx:id="tableColumnHourRidership" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Ridership" />
                  <TableColumn fx:id="tableColumnHourComment" maxWidth="230.0" minWidth="230.0" prefWidth="230.0" text="Comment" />
                  <TableColumn fx:id="tableColumnHourMetroStationID" maxWidth="90.0" minWidth="90.0" prefWidth="90.0" text="MetroStationID" />
              </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <Button fx:id="buttonHoursEditMode" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#showEditModeForHours" prefHeight="25.0" prefWidth="150.0" text="Edit mode" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="365.0" AnchorPane.rightAnchor="15.0" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
